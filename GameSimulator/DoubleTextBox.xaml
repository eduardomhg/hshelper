<UserControl x:Class="GameSimulator.DoubleTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameSimulator"
             mc:Ignorable="d" 
             d:DesignHeight="163" d:DesignWidth="192">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,11,0,0" TextWrapping="Wrap" Text="{Binding Text1, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:DoubleTextBox}}}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,39,0,0" TextWrapping="Wrap" Text="{Binding Text2, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:DoubleTextBox}}}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
